<?xml version="1.0" encoding="UTF-8"?>
<sc:item xmlns:sc="http://www.utc.fr/ics/scenari/v3/core">
	<op:expUc xmlns:op="utc.fr:ics/opale3" xmlns:sp="http://www.utc.fr/ics/scenari/v3/primitive">
		<op:uM>
			<sp:title>Créer un compte Google</sp:title>
		</op:uM>
		<sp:pb>
			<op:pb>
				<sp:info>
					<op:pbTi/>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve">Pour créer votre compte Google Blogger vous devez.</sc:para>
							</op:txt>
						</sp:txt>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve">Ouvrir votre <sc:inlineStyle role="emp">navigateur internet</sc:inlineStyle>.</sc:para>
								<sc:para xml:space="preserve">Dans la <sc:inlineStyle role="emp">barre d'adresse</sc:inlineStyle>, saisir l'adresse : « <sc:phrase role="url"><op:urlM><sp:url>https://www.blogger.com</sp:url><sp:title>Google Blogger</sp:title></op:urlM>https://www.blogger.com</sc:phrase> »</sc:para>
							</op:txt>
						</sp:txt>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">«Créez votre blogue »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_blogue_bouton_creez_votre_blog.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le lien hypertexte : <sc:inlineStyle role="emp">« Créer un compte »</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_blogue_lien_creer_compte.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Entrer votre : <sc:inlineStyle role="emp">« Prénom</sc:inlineStyle> » et : <sc:inlineStyle role="emp">« Nom ».</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_nom_prenom.png"/>
							</op:txtRes>
						</sp:txtRes>
					</op:res>
				</sp:info>
				<sp:warning>
					<op:pbTi>
						<sp:title>La saisie du futur nom d'utilisateur</sp:title>
					</op:pbTi>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve">Entrer le future nom d'utilisateur, de la manière suivante : </sc:para>
								<sc:para xml:space="preserve">Le <sc:inlineStyle role="emp">sigle du cours</sc:inlineStyle> + le <sc:inlineStyle role="emp"><sc:inlineStyle role="emp">trimestre</sc:inlineStyle></sc:inlineStyle><sc:inlineStyle role="emp"> et l'année</sc:inlineStyle> +<sc:inlineStyle role="emp"> initiale</sc:inlineStyle> </sc:para>
								<sc:para xml:space="preserve">Par exemple : pour l'élève portant le nom de <sc:inlineStyle role="emp">William Tremblay</sc:inlineStyle> de la cohorte <sc:inlineStyle role="emp">Automne 2016</sc:inlineStyle> :</sc:para>
								<sc:para xml:space="preserve"><sc:inlineStyle role="emp">DDD9651A16WT</sc:inlineStyle></sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:warning>
				<sp:info>
					<op:pbTi/>
					<op:res>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Entrer et confirmer le : <sc:inlineStyle role="emp">« mot de passe »</sc:inlineStyle> que vous avez préalablement créé.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_creer_confirmer_mot_passe.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:itemizedList>
											<sc:listItem>
												<sc:para xml:space="preserve">Entrer dans le premier champ votre le :<sc:inlineStyle role="emp"> « jour »</sc:inlineStyle> de votre naissance</sc:para>
											</sc:listItem>
											<sc:listItem>
												<sc:para xml:space="preserve">Sélectionner à l'aide de la liste déroulante le <sc:inlineStyle role="emp">« mois »</sc:inlineStyle> de votre naissance</sc:para>
											</sc:listItem>
											<sc:listItem>
												<sc:para xml:space="preserve">Entrer le dernier champ l' : <sc:inlineStyle role="emp">« Année » </sc:inlineStyle> de votre naissance </sc:para>
											</sc:listItem>
										</sc:itemizedList>
										<sc:para xml:space="preserve">N.B. : il n'est pas nécessaire d'inscrire votre vraie date de naissance.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_blogue_date_naissance.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Sélectionner dans la liste déroulante votre : <sc:inlineStyle role="emp">« Sexe »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_sexe.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Entrer dans le champ votre : <sc:inlineStyle role="emp">« Numéro de téléphone mobile »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_numero_telephone_mobile.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Entrer dans le champ votre : <sc:inlineStyle role="emp">« adresse e-mail actuelle »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_adresse_courriel_actuelle.png"/>
							</op:txtRes>
						</sp:txtRes>
					</op:res>
				</sp:info>
				<sp:warning>
					<op:pbTi>
						<sp:title>Quelle adresse courriel saisir ?</sp:title>
					</op:pbTi>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve">Entrer dans le champ : <sc:inlineStyle role="emp">« Votre adresse e-mail actuelle »</sc:inlineStyle>, votre adresse courriel UQÀM.</sc:para>
							</op:txt>
						</sp:txt>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Par exemple : tremblay.william@courrier.uqam.ca</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_exemple_adresse_email_actuelle.png"/>
							</op:txtRes>
						</sp:txtRes>
					</op:res>
				</sp:warning>
				<sp:info>
					<op:pbTi/>
					<op:res>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Sélectionner l'option : <sc:inlineStyle role="emp">« Définir Google comme page d'accueil par défaut »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_coche_page_accueil_defaut.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Sélectionner dans la liste déroulante le : « Canada »</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_liste_deroulante_pays.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Étapes suivantes »</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_etapes_suivantes.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Lire les : <sc:inlineStyle role="emp">« Règles de confidentialité et conditions d'utilisation ».</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_regles_confidentialite.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« J'accepte »</sc:inlineStyle>, si vous acceptez les : <sc:inlineStyle role="emp">« Règles de confidentialité et conditions d'utilisation »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_accepte.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Lire de <sc:inlineStyle role="emp">mot de bienvenue de Google</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_mot_bienvenue.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Vous êtes maintenant sur la <sc:inlineStyle role="emp">page de bienvenue sur Blogger</sc:inlineStyle>. Vous devez maintenant créer votre profil.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_page_bienvenue_blogger.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Créer un profil Google+ ».</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_creer_profil_google_plus.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Vous êtes maintenant sur la page : <sc:inlineStyle role="emp">« Rejoignez Google + en créant votre profil »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_rejoignez_google_plus.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le lien hypertexte : <sc:inlineStyle role="emp">« Ajouter votre photo »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_lien_hypertexte_ajouter_photo.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Vous êtes maintenant dans la <sc:inlineStyle role="emp">fenêtre d'importation d'images de Google.</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_google_importation_image.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Sélectionner une photo sur votre ordinateur »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_selectionner_photo_ordinateur.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Choisir votre <sc:inlineStyle role="emp">photographie de profil.</sc:inlineStyle></sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_boite_dialogue_photo_profil.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Ouvrir »</sc:inlineStyle> ou : <sc:inlineStyle role="emp">« Open »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_open.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve"><sc:inlineStyle role="emp">Attendre</sc:inlineStyle> pendant l'importation de votre image.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_barre_progression_importation_image_profil.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve"><sc:inlineStyle role="emp">Cadrer</sc:inlineStyle> l'image à votre goût.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_cadrage_image_profil.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le lien hypertexte : <sc:inlineStyle role="emp">« Ajoutez une légende »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_lien_hypertexte_ajoutez_legende.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Entrer le descriptif de votre image dans le champ : <sc:inlineStyle role="emp">« Ajoutez une légende »</sc:inlineStyle>. Entrer, par exemple : <sc:inlineStyle role="emp">« Ma photo de profil »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_champ_ajouter_legende.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Définir comme photo de profil »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_definir_photo_profil.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">S'assurer que l'information présente sur la page : <sc:inlineStyle role="emp">« Inscrivez-vous »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_page_inscrivez_vous.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Mettre à jour »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_mettre_jour.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Vous êtes maintenant sur la<sc:inlineStyle role="emp"> page de bienvenue de Google Blogger</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_page_bienvenue_blogger.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>rgt</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Cliquer sur le bouton : <sc:inlineStyle role="emp">« Continuer vers Blogger »</sc:inlineStyle>.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/Ressources/DDD9651_bouton_continuer_blogger.png"/>
							</op:txtRes>
						</sp:txtRes>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve">Vous êtes maintenant sur la page : <sc:inlineStyle role="emp">« Tableau de bord »</sc:inlineStyle>, de Google Blogger.</sc:para>
									</op:txt>
